{
    // shared vscode launching config (for the convenience of developers)
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Vue.js",
            "runtimeExecutable": "npm",
            "env": {
                // Note: these two definitions duplicate the defaults in
                // `App.vue`
                "VUE_APP_BACKEND_PORT": "80",
                "VUE_APP_DEPLOYMENT_HOST": "localhost",
            },
            "runtimeArgs": [
                "run",
                "serve",
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
        },
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "accompanist.main:app",
                "--reload"
            ]
        },
        {
            "name": "Celery worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "accompanist.celery.main.app",
                "worker",
                "--loglevel",
                "info",
                "-E"
            ],
        }
    ]
}