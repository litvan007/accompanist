{
    // shared vscode launching config (for the convenience of developers)
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Serve frontend",
            "runtimeExecutable": "npm",
            "env": {
                "VUE_APP_BACKEND_PORT": "80"
            },
            "runtimeArgs": [
                "run",
                "serve",
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
        },
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "STORAGE_PATH": "./storage-volume"
            },
            "args": [
                "accompanist.main:app",
                "--reload"
            ]
        },
        {
            "name": "celery worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "env": {
                "STORAGE_PATH": "./storage-volume"
            },
            "args": [
                "-A",
                "accompanist.celery.main.app",
                "worker",
                "--loglevel",
                "info",
                "-E"
            ],
        }
    ]
}